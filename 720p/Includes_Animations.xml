	<include name="PosterDiscAnimation">
	    <animation type="Focus" reversible="false">
	        <effect type="slide" start="-135,0" end="0,0" time="400" delay="500" />
			<effect type="fade" start="0" end="100" delay="420" time="300" />
		    <effect type="rotate" reversible="false" end="-360" center="auto" time="6400" delay="0" loop="false" tween="cubic" easing="inout" />			
        </animation>	    
